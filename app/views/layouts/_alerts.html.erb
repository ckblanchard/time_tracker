<% if notice %>
  <p class="notice alert alert-warning">
    <%= notice %>
    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
  </p>
<% end %>

<% if alert %>
  <p class="alert alert-danger">
    <%= alert %>
    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
  </p>
<% end %>