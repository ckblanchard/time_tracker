<%= bootstrap_form_for @client, layout: :horizontal, label_col: "col-xs-3", control_col: "col-xs-9" do |form| %>
  <%= form.text_field :contact_name %>
  <%= form.text_field :company %>
  <%= form.text_field :address %>
  <%= form.text_field :address2 %>
  <%= form.text_field :city %>
  <%= form.text_field :state %>
  <%= form.text_field :zip_code %>
  <%= form.text_field :phone_number %>
  <%= form.button "Save client", class: "btn btn-primary", data: {disable_with: "<i class='fa fa-spinner fa-spin'></i> Saving..."} %>
<% end %>