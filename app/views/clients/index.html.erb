<div class="page-header">
  <h1>Client list<br/>
  <small>All your invoicable clients.</small></h1>
  
  <%= link_to "Add a new client", new_client_path, class: "btn btn-primary" %>
</div>

<table class="table table-striped table-hover">
  <thead>
    <th>Company</th>
    <th>Contact</th>
    <th>Address</th>
    <th>Phone number</th>
    <th></th>
  </thead>
  <tbody>
    <% @clients.each do |client| %>
      <tr>
        <td><%= client.company %></td>
        <td><%= client.contact_name %></td>
        <td>
          <address>
            <%= client.address %><br>
            <% unless client.address2.blank? %><%= client.address2 %><br> <% end %>
            <%= client.city %>, <%= client.state %> <%= client.zip_code %><br>
          </address>  
        </td>
        <td><%= client.phone_number %></td>
        <td><%= link_to '<span class="glyphicon glyphicon-edit"></span> Edit'.html_safe, edit_client_path(client), class: "btn btn-primary btn-sm" %></td>
      </tr>
      <% end %>
  </tbody>
</table>
