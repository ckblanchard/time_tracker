<div class="page-header">
  <h1>New entry<br/>
  <small>Start tracking your time.</small></h1>
  
  <%= link_to "Back to all entries", entries_path, class: "btn btn-default btn-sm" %>
</div>

<div>
  <h2 class="text-center">Start tracking time now</h2>
  <br>
  <div class="btn-group btn-group-justified">
    <div class="btn-group">
      <button type="button" class="btn btn-success btn-lg start-button">Start</button>
    </div>
    <div class="btn-group">
      <button type="button" class="btn btn-danger btn-lg stop-button">Stop</button>
    </div>
  </div>
  <div id="record" class="panel panel-default">
    <div class="panel-body">
      <p class="timer text-center active"></p>
    </div>
  </div>
</div>


<%= bootstrap_form_for @entry do |form| %>
  <%= form.hidden_field :user_id %>
  <%= form.hidden_field :entry_date %>
  <%= form.hidden_field :start_time %>
  <%= form.hidden_field :end_time %>
  <%= form.select :invoice_id, options_for_select(Invoice.invoices_for current_user), label: "Choose an invoice for this entry", include_blank: true %>
  <%= form.text_field :topic %>
  <%= form.button "Save entry", class: "btn btn-primary", data: {disable_with: "<i class='fa fa-spinner fa-spin'></i> Saving..."} %>
<% end %>