<div class="page-header">
  <h1>Invoices<br/>
  <small>All your invoices for <%= @job.job_name %>.</small></h1>
  
  <%= link_to "Add an invoice", new_job_invoice_path(@job), class: "btn btn-primary" %>
</div>

<table class="table table-striped table-hover">
  <thead>
    <th>Invoice date</th>
    <th>Status</th>
    <th></th>
  </thead>
  <tbody>
    <% @invoices.each do |invoice| %>
      <tr>
        <td><%= invoice.invoice_date %></td>
        <td><%= invoice.status %></td>
        <td>
          <%= link_to '<span class="glyphicon glyphicon-edit"></span> Edit'.html_safe, edit_job_invoice_path(@job, invoice), class: "btn btn-primary btn-sm" %>
          <%= link_to "View", job_invoice_path(@job, invoice), class: "btn btn-primary btn-sm" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>