<div class="page-header">
  <h1>Job list<br/>
  <small>All your available jobs.</small></h1>
  
  <%= link_to "Add a new job", new_job_path, class: "btn btn-primary" %>
</div>

<table class="table table-striped table-hover">
  <thead>
    <th>Client</th>
    <th>Job</th>
    <th>Start date</th>
    <th>End date</th>
    <th>Rate</th>
    <th></th>
  </thead>
  <tbody>
    <% @jobs.each do |job| %>
      <tr>
        <td><%= job.client.company %></td>
        <td><%= job.job_name %></td>
        <td><%= job.start_date.to_date.to_formatted_s(:long) %></td>
        <td><%= job.end_date.to_date.to_formatted_s(:long) %></td>
        <td><%= number_to_currency job.rate %></td>
        <td>
          <%= link_to '<span class="glyphicon glyphicon-edit"></span> Edit'.html_safe, edit_job_path(job), class: "btn btn-primary btn-sm" %>
          <%= link_to "View", job_path(job), class: "btn btn-primary btn-sm" %>
          <%= link_to "Invoices", job_invoices_path(job), class: "btn btn-primary btn-sm" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>